            <Label Content="Adres : " Canvas.Left="749" Canvas.Top="243" Width="212" FontSize="24" FontWeight="Bold" FontFamily="Century Gothic" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox TextWrapping="Wrap" Width="297" Height="144" FontSize="24" Canvas.Left="984" Canvas.Top="252" HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Canvas>
